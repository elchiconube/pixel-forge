---
// Definimos la interfaz para las propiedades que recibir√° el componente
interface Props {
  name: string;
  title: string;
  card_class: string;
  expansion: string;
  number_in_series: string;
  artist: string;
  pixels_cost: number;
  strength: number;
  health: number;
  ability: string;
  ability_description: string;
  game: string;
  quote: string;
  rarity: string;
  rarity_level: number;
  language: string;
  image: string;
}

const { 
  name,
  title,
  card_class,
  expansion,
  number_in_series,
  artist,
  pixels_cost,
  strength,
  health,
  ability,
  ability_description,
  game,
  quote,
  rarity,
  rarity_level,
  language,
  image
} = Astro.props;

// Funci√≥n para obtener el color de fondo seg√∫n la rareza
const getRarezaColor = (rareza: string) => {
  switch (rareza.toLowerCase()) {
    case 'com√∫n':
      return 'var(--color-background-light)';
    case 'rara':
      return '#2a4d69';
    case '√©pica':
      return '#5e3a98';
    case 'legendaria':
      return '#8c6b2a';
    default:
      return 'var(--color-background-light)';
  }
};

const rarezaColor = getRarezaColor(rarity);
---

<article class="card">
  <div class="card-image-container">
    <img src={image} alt={name} class="card-image" />
    <div class="card-expansion">{expansion} ¬∑ {number_in_series}</div>
  </div>
  <div class="card-content">
    <div class="card-header">
      <div class="card-title-container">
        <h3 class="card-title">{name}</h3>
        <p class="card-subtitle">{title}</p>
      </div>
      <span class="card-type">{card_class}</span>
    </div>
    <div class="card-ability">
      <p>{ability_description}</p>
    </div>
    <div class="card-game">{game}</div>
    <div class="card-quote">"{quote}"</div>
    <div class="card-footer">
      <div class="card-stats">
        <span class="stat cost">ü™ô {pixels_cost}</span>
        <span class="stat strength">‚öîÔ∏è {strength}</span>
        <span class="stat health">üõ°Ô∏è {health}</span>
      </div>
      <div class="card-artist">Art: {artist}</div>
    </div>
    <div class="card-rareza" style={`background-color: ${rarezaColor};`}>
      {rarity} {"‚òÖ".repeat(rarity_level)}
    </div>
  </div>
</article>

<style>
  .card {
    background-color: var(--color-background);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .card-image-container {
    position: relative;
    padding-top: 100%; /* Relaci√≥n de aspecto 1:1 */
    overflow: hidden;
  }

  .card-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .card:hover .card-image {
    transform: scale(1.05);
  }

  .card-content {
    padding: var(--space-4);
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    position: relative;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-2);
  }

  .card-title {
    font-family: var(--font-secondary);
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-lg);
    margin: 0;
    color: var(--color-text);
  }

  .card-type {
    font-size: var(--font-size-xs);
    background-color: var(--color-primary-dark);
    color: var(--color-text);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-full);
    text-transform: uppercase;
    font-weight: var(--font-weight-semibold);
  }

  .card-subtitle {
    color: var(--color-text-muted);
    font-size: var(--font-size-xs);
    margin-top: var(--space-1);
  }

  .card-ability {
    background-color: rgba(0, 0, 0, 0.05);
    border-radius: var(--radius-md);
    padding: var(--space-3);
    margin-bottom: var(--space-3);
    font-size: var(--font-size-sm);
  }

  .card-game {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-bottom: var(--space-2);
  }

  .card-quote {
    font-style: italic;
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
    border-left: 2px solid var(--color-primary);
    padding-left: var(--space-2);
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-top: auto;
  }

  .card-stats {
    display: flex;
    gap: var(--space-3);
    margin-bottom: var(--space-2);
  }

  .stat {
    display: inline-flex;
    align-items: center;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
  }

  .strength {
    color: var(--color-secondary);
  }

  .health {
    color: var(--color-info);
  }

  .cost {
    color: var(--color-warning);
  }

  .card-artist {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    font-style: italic;
  }

  .card-expansion {
    position: absolute;
    top: var(--space-2);
    left: var(--space-2);
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    font-size: var(--font-size-xs);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-full);
  }

  .card-rareza {
    position: absolute;
    top: var(--space-2);
    right: var(--space-2);
    font-size: var(--font-size-xs);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-full);
    color: var(--color-text);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
  }
</style>
